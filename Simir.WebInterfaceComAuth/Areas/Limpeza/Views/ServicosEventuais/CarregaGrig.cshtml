@model IList<Simir.Application.ViewModels.LimpezasFuturasVM>


<table id="example" class="table table-hover" cellspacing="0">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().nmProgramacao)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().nmTipoProgramacao)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().dtInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().dtFim)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].nmProgramacao)
                </td>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].nmTipoProgramacao)
                </td>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].dtInicio)
                </td>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].dtFim)
                </td>
                <td>
                    <a href="@Url.Action("Index", "ServicosEventuais", new { area = "Limpeza", id = Model[i].LimpezaID })">
                        <div class="btn btn-primary btn-xs"><i class="fa fa-edit "></i></div>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>



<script>

    $(document).ready(function () {
        $('#example').dataTable({
            "lengthChange": false
        });
    });
</script>