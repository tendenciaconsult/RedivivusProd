@model IList<Simir.Application.ViewModels.HistoricoColetaEventualVM>

<table id="example" class="table table-hover" cellspacing="0">
    <thead>
        <tr>
            <th style="text-align: center;">@Html.DisplayNameFor(model => model.FirstOrDefault().dtReferencia)</th>
            <th style="text-align: center;">@Html.DisplayNameFor(model => model.FirstOrDefault().nmProgramacao)</th>
            <th style="text-align: center;">@Html.DisplayNameFor(model => model.FirstOrDefault().nmRota)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].dtReferencia)
                </td>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].nmProgramacao)
                </td>
                <td align='center'>
                    @Html.DisplayFor(item => item[i].nmRota)
                </td>
                <td>
                    <a href="@Url.Action("Index", "ServicosEventuais", new { area = "ColetaTransporte", id = Model[i].ColetaEventualID })">
                        <div class="btn btn-primary btn-xs"><i class="fa fa-edit "></i></div>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
        $(document).ready(function () {
            $('#example').dataTable({
                "order": [[ 3, "desc" ]],
                "searching": false,
                "lengthChange": false
                });
        });
</script>

