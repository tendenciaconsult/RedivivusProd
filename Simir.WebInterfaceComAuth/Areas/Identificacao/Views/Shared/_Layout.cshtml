@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-sm-12 col-xs-12 col-center-block">
        <div class="panel panel-primary text-center no-boder bg-color-green">
            <div class="panel-body">
                <i class="fa fa-rocket fa-5x"></i>
                <p class="main-text">Bem-Vindo ao SIMIR! </p>
                <p>Sistema Municipal de Resíduos Sólidos</p>
            </div>
            <div class="panel-footer back-footer-green">
                Identifique-se ao sitema com sua conta. Caso ainda não tenha uma conta entre em contato.
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-sm-12 col-xs-12 col-center-block">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
            <div class="panel-back">

            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @RenderSection("footer", false)
        <a href="@Url.Action("Index", ViewContext.RouteData.Values["Controller"].ToString())">
            <button class="btn btn-primary btn-lg"><i class="fa fa-backward "></i> Voltar a  @ViewContext.RouteData.Values["Controller"].ToString()</button>
        </a>
    </div>
</div>

@section scripts{
    @RenderSection("scripts", false)
}
