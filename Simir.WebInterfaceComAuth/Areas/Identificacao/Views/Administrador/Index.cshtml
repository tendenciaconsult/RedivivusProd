@model Simir.Application.ViewModels.AdministradorSobreVM


@{
    ViewBag.Title = "Sobre o administrador do SIMIR";
    Layout = "~/Views/Shared/_OnePanel.cshtml";
}

<div class="col-md-6">
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Nome)</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.Nome)</div>
    </div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.NomeFantasia)</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.NomeFantasia)</div>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Cnpj)</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.Cnpj)</div>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Telefone1)</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.Telefone1)</div>
    </div>
    @if (!String.IsNullOrWhiteSpace(Model.Telefone2))
    {
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Telefone2)</label>
            <div class="form-control-static">@Html.DisplayFor(model => model.Telefone2)</div>
        </div>
    }
    @if (!String.IsNullOrWhiteSpace(Model.Telefone3))
    {
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Telefone3)</label>
            <div class="form-control-static">@Html.DisplayFor(model => model.Telefone3)</div>
        </div>
    }

    @if (!String.IsNullOrWhiteSpace(Model.Email))
    {
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Email)</label>
            <div class="form-control-static">@Html.DisplayFor(model => model.Email)</div>
        </div>
    }

    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.NaturezaJuridica)</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.NaturezaJuridica)</div>
    </div>
</div>
@if (Model.Endereco != null)
{
    <div class="col-md-6">
        @Html.Action("EnderecoDetalhe", "Localidade", new { area = "Cadastros", model = Model.Endereco })
    </div>
}
