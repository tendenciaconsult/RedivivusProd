@model IList<Simir.Application.ViewModels.SecretariaBasicoVM>



    <table id="example" class="table table-hover" cellspacing="0">
        <thead>
        <tr>
            <th style="text-align: center;">@Html.DisplayNameFor(model => model.FirstOrDefault().NomeSecretaria)</th>
            <th style="text-align: center;">@Html.DisplayNameFor(model => model.FirstOrDefault().NomeSecretario)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
{
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].NomeSecretaria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].NomeSecretario)
                    </td>
                    <td>
                        <a href="@Url.Action("Editar", "Secretarias", new { area = "Configuracao", id = Model[i].SecretariaID })">
                            <div class="btn btn-primary btn-xs"><i class="fa fa-edit "></i></div>
                        </a>

                    </td>
                </tr>
            }


        </tbody>

    </table>

    <script>
        function carregaPagina() {
            $.unblockUI();
        }
        $(window).load(carregaPagina());

        $(document).ready(function () {
            $('#example').dataTable({
                "searching": false,
                "lengthChange": false
            });
        });
    </script>
