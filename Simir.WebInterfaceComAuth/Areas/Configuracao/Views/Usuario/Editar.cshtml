@model Simir.Application.ViewModels.UsuarioAutoEditVM
@using Simir.WebInterfaceComAuth.Helpers

@{
    ViewBag.Title = "Editar Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="panel panel-default">
        <div class="panel-heading">
            Usuário
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    @Html.ValidationSummary(false, "(* campos obrigatórios)", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.NomeUsuario)</label>
                        <div class="form-control-static">@Html.DisplayFor(model => model.NomeUsuario)</div>
                    </div>

                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Cargo)</label>
                        <div class="form-control-static">@Html.DisplayFor(model => model.Cargo)</div>
                    </div>

                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.CPF)</label>
                        <div class="form-control-static">@Html.DisplayFor(model => model.CPF)</div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.matricula)</label>
                        <div class="form-control-static">@Html.DisplayFor(model => model.matricula)</div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Telefone)</label>
                        <div class="form-control-static">@Html.DisplayFor(model => model.Telefone)</div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Celular)</label>
                        <div class="form-control-static">@Html.DisplayFor(model => model.Celular)</div>
                    </div>

                </div>

                <div class="col-md-6">

                    @Html.EditorFor(model => model.Endereco)
                </div>
                <div class="col-md-12">
                    <hr />
                    <div class="form-group  pull-right">
                        <div class="btn btn-success" onclick="confirmaUsuario();" data-confirm="Tem certeza que deseja salvar?">Salvar</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function carregaPagina() {
            

        }
        $(window).load(disabilitaEndereco(true, false));
        $(window).load(carregaPagina());



        function confirmaUsuario() {

            var form = $('form', '#page-inner');
            if (form.validate()) {
                form.submit();
                // return true;
            }

        }


    </script>
}
