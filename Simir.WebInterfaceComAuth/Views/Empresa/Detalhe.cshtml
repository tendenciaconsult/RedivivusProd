@model Simir.WebInterface.Models.Empresa
@{
    ViewBag.Titulo = "Detalhe";
    Layout = "~/Views/Shared/_Modal.cshtml";
}

<div class="form-group">
    <label>Nome</label>
    <div class="form-control-static">@Html.DisplayFor(model => model.Nome)</div>
</div>
<div class="form-group">
    <label>CNPJ</label>
    <div class="form-control-static">@Html.DisplayFor(model => model.Cnpj)</div>
</div>
<div class="form-group">
    <label>Ramo</label>
    <div class="form-control-static">@Html.DisplayFor(model => model.Ramo)</div>
</div>
<div class="form-group">
    <label>Endereço</label>
    <div class="form-control-static">@Html.DisplayFor(model => model.Endereco)</div>
</div>
<div class="form-group">
    <label>Telefone</label>
    <div class="form-control-static">@Html.DisplayFor(model => model.Telefone)</div>
</div>


@section footer{
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-action="EditModal" data-id="@Model.Id"><i class="fa fa-Edit "></i> Editar</button>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal" data-action="Delete" data-id="@Model.Id"><i class="fa fa-Edit "></i> Deletar </button>
}
